block layout_variables
  - dispatcher = 'home'

extends /views/layouts/layout-bleed

block content

  .has-alert
    include /views/partials/_flash

  .row.hero.bc-regent
    .cell.well.well--s--l

      .mbxl.tac
        h2.h.h--1.h--light.mbs Not exactly sure what JavaScript is?

        a.btn.btn--rounded.has-btn-icon.js-video-trigger(href='#')
          span.btn.btn--sticker.btn-icon
